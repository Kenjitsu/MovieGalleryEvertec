@model MovieCollection.UI.Models.MoviesViewModel

@{


}

<div class="container">
    
    <h1 class="text-center fw-bold">¡Busca tus películas favoritas!</h1>
    <div class="row m-3 position-sticky">
        <div class="col-12">
            <form asp-controller="Movies" asp-action="Index" method="post">
                <div class="input-group mb-3  ">
                    <button class="btn btn-outline-primary" type="submit" id="button-addon1">Buscar</button>
                    <input type="text" class="form-control" placeholder="" name="movieName" aria-label="Example text with button addon" aria-describedby="button-addon1">
                </div>
            </form>
        </div>  
    </div>
    @foreach (var movie in Model.Movies.Search)
    {
        <div class="card mb-3 shadow">
            <div class="row p-0">
                <div class="col-md-3">
                    <img src="@movie.Poster" alt="@movie.Title" class="card-img img-fluid w-100 h-100">
                </div>
                <div class="col-md-9">
                    <div class="card-body">
                        <h2 class="card-title pb-0 mb-0">@movie.Title</h2>
                        
                        <small class="card-text p-0 m-0">Id @movie.imdbID</small>
                        <h6 class="fw-bold">Año de salida:</h6>
                        <p class="card-text">@movie.Year</p>
                    </div>
                </div>
            </div>
        </div>
    }
    <div class="text-end">
        <!-- Botón de página anterior -->
        <a href="@Url.Action("Index", "Movies", new { movieName = Model.MovieName, page = Model.Page - 1 })" class="btn btn-outline-secondary">Anterior</a>
        <!-- Botón de siguiente página -->
        <a href="@Url.Action("Index", "Movies", new { movieName = Model.MovieName, page = Model.Page + 1 })" class="btn btn-outline-primary">Siguiente</a>
    </div>
</div>

